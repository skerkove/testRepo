@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="header">
    <div class="left"><h1>Register</h1>
    </div>
    <div class="right"><h5>Already have an account: </h5>
<a asp-action="SignIn" asp-controller="Home" class="btn btn-warning">SignIn</a>
</div>

</div>
<hr>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Register" asp-controller="Home" method="post">
    <label asp-for="FirstName"></label>
    <input asp-for="FirstName">
    <label asp-for="LastName"></label>
    <input asp-for="LastName">
    <label asp-for="Email"></label>
    <input asp-for="Email">
    <label asp-for="Password"></label>
    <input asp-for="Password">
    <label asp-for="ConfirmPassword"></label>
    <input asp-for="ConfirmPassword"><br>
    <input type="submit" value="Register" class="btn btn-success">
</form>